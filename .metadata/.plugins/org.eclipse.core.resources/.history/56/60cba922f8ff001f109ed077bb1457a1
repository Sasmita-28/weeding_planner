 @keyframes letterAppear {
      0% {
        opacity: 0;
        transform: translateY(-20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h1 {
     font-family: 'Segoe Script', sans-serif;
      font-size: 40px;
      text-align: center;
      opacity: 0; /* Initially hide the text */
      animation: letterAppear 1s forwards; /* Apply the animation */
    }
